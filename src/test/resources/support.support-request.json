{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "description": {
      "type": "string"
    },
    "comment": {
      "type": "string"
    },
    "anonymous": {
      "type": "boolean"
    },
    "refUrl": {
      "type": "string"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "stackTrace": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "error",
          "stackTrace"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "description",
    "comment",
    "anonymous",
    "refUrl",
    "errors"
  ]
}
